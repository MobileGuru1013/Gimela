<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="TreeViewItemExpanderToggleButtonGlyphStrokeBrush" Color="{DynamicResource BorderMediumColor}" />
    <SolidColorBrush x:Key="TreeViewItemExpanderToggleButtonGlyphFillBrush" Color="{DynamicResource ControlLightColor}" />
    <SolidColorBrush x:Key="TreeViewItemExpanderToggleButtonGlyphMouseOverFillBrush" Color="{DynamicResource ControlMouseOverMediumColor}" />

    <SolidColorBrush x:Key="TreeViewItemMouseOverBackgroundBrush" Color="{DynamicResource ControlMouseOverDarkColor}" />
    <SolidColorBrush x:Key="TreeViewItemSelectedBorderBrush" Color="{DynamicResource BorderLightColor}" />
    <LinearGradientBrush x:Key="TreeViewItemSelectedBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="{DynamicResource ControlMouseOverDarkColor}" Offset="0" />
                <GradientStop Color="{DynamicResource ControlMouseOverDarkColor}" Offset="0.5" />
                <GradientStop Color="{DynamicResource ControlMouseOverDarkColor}" Offset="1" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    
</ResourceDictionary>