<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Gimela.Presentation.Controls">

  <SolidColorBrush x:Key="ProgressIndicatorProgressColourBrush" Color="{DynamicResource MaskForegroundColor}" />

  <Style TargetType="controls:ProgressIndicator">
    <Setter Property="ProgressColour" Value="{DynamicResource ProgressIndicatorProgressColourBrush}" />
  </Style>

</ResourceDictionary>