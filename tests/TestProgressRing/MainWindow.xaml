    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <controls:ProgressRing Grid.Row="0"
                           Grid.Column="0"
                           Width="100"
                           Height="100"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           IsActive="True" />
    <controls:ProgressIndicator Grid.Row="0"
                                Grid.Column="1"
                                Width="180"
                                Height="15" />
