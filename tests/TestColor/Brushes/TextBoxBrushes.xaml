<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Skins/Shared.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="{StaticResource ReversedSelectedForegroundColor}" />
    <SolidColorBrush x:Key="TextBoxBorderBackgroundBrush" Color="{StaticResource ReversedSelectedForegroundColor}" />
    <SolidColorBrush x:Key="TextBoxBorderDisabledBorderBrush" Color="{StaticResource BorderDarkColor}" />
    
    <LinearGradientBrush x:Key="TextBoxBorderBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="{StaticResource BorderMediumColor}" Offset="0" />
                <GradientStop Color="{StaticResource BorderLightColor}" Offset="0.5" />
                <GradientStop Color="{StaticResource BorderMediumColor}" Offset="1" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

</ResourceDictionary>