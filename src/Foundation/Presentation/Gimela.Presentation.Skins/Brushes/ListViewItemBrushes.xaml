<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="ListViewItemBackgroundBrush" Color="{DynamicResource ReversedSelectedForegroundColor}" />
    <SolidColorBrush x:Key="ListViewItemMouseOverBackgroundBrush" Color="{DynamicResource ControlMouseOverDarkColor}" />
    <SolidColorBrush x:Key="ListViewItemAlternativeIndex0BackgroundBrush" Color="{DynamicResource ControlMouseOverLightColor}" />
    <SolidColorBrush x:Key="ListViewItemAlternativeIndex1BackgroundBrush" Color="{DynamicResource ControlMouseOverMediumColor}" />

    <SolidColorBrush x:Key="ListViewItemSelectedBorderBrush" Color="{DynamicResource BorderLightColor}" />
    <LinearGradientBrush x:Key="ListViewItemSelectedBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="{DynamicResource ControlMouseOverDarkColor}" Offset="0" />
                <GradientStop Color="{DynamicResource ControlMouseOverDarkColor}" Offset="0.5" />
                <GradientStop Color="{DynamicResource ControlMouseOverDarkColor}" Offset="1" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    
</ResourceDictionary>